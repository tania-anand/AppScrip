<?xml version="1.0" encoding="utf-8"?>


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/game_question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Who is the best cricketer in the world ?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.104" />


    <RadioGroup
        android:id="@+id/radio_group_ques1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <RadioButton
            android:id="@+id/ques1_opt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sachin Tendulkar" />

        <RadioButton
            android:id="@+id/ques1_opt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virat Kolli" />

        <RadioButton
            android:id="@+id/ques1_opt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adam Gilchirst" />

        <RadioButton
            android:id="@+id/ques1_opt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jacques Kallis" />


    </RadioGroup>

    </android.support.constraint.ConstraintLayout>




